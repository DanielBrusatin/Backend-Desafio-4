<form action="/api/sessions/register" method="post">
  <h2>REGISTRO</h2>
  <label for="first_name">Nombre</label>
  <input type="text" name="first_name" id="first_name" required>
  <label for="last_name">Apellido</label>
  <input type="text" name="last_name" id="last_name" required>
  <label for="age">Edad</label>
  <input type="text" name="age" id="age" pattern="[0-9]*" required>
  <label for="email">Email</label>
  <input type="text" name="email" id="email" required>
  <label for="password">Contraseña</label>
  <input type="password" name="password" id="password" required>
  <button type="submit" class="btn btn-primary">Register</button>
</form>
<a href="/login" class="btn btn-primary">Volver al login</a>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  switch ('{{status}}') {
    case ('success'):
      Swal.fire({
        position: "top-end",
        title: "Registro completo!",
        text: "Usuario creado con éxito, seras redirigido al login.",
        icon: 'success',
        showConfirmButton: false,
        timer: 2500
      }).then(() => {
        location = '/login'
      })
      break
    case ('error'):
      Swal.fire({
        title: 'Ups!',
        text: '{{error}}',
        icon: 'error'
      });
  }
</script>